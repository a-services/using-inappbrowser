<h1>Login</h1>
<div class="lead mb-3">Use "test : 123" to login</div>

<form action="/" method="post" class="text-muted">
    <div class="form-group">
        <label for="login-form-email">Email</label>
        <div class="form-field">
            <input type="text" class="form-control" name="email" id="login-form-email" value="" />
        </div>
    </div>
    <div class="form-group">
        <label for="login-form-password">Password</label>
        <div class="form-field">
            <input type="password" class="form-control" name="password" id="login-form-password" />
        </div>
    </div>
    <div class="form-row buttons">
        <button class="btn btn-info btn-block my-3" type="submit" name="login" id="loginBtn">Login</button>
    </div>
</form>

{{#if toast}}
<div class="alert alert-primary" role="alert">
    Use "test : 123" to login
</div>
{{/if}}


